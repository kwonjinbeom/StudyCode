	<!-- 해당 번호의 비밀먼호 확인 -->
	<select id="pwdConfirm" parameterType="board" resultType="int">
		SELECT NVL((
				SELECT 1 FROM spring_board
				WHERE b_num = #{b_num} AND b_pwd = #{b_pwd}
				), 0) as state
		FROM dual
	</select>
	<update id="boardUpdate" parameterType="board">
		UPDATE spring_board 
		SET b_title = #{b_title},
			b_content = #{b_content},
			b_date = sysdate
			<if test="b_pwd != ''">
				, b_pwd = #{b_pwd}
			</if>
		WHERE b_num = #{b_num}
	</update>
	
	<!-- 게시물 삭제 -->
	<delete id="boardDelete" parameterType="board">
